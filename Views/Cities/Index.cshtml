<p>Filter population by order</p>
<form action="/cities" method="post">
  <div class="form-group">
    <select class="form-control" name="order" id="order">
      <option>ASC</option>
      <option>DESC</option>
    </select>
  </div>
  <br>
  <button type="submit" class="btn btn-info">Filter Population</button>
</form>

<ul>
@foreach (var city in Model)
{
<li><a href = "/cities/@city.GetId()">Name: @city.GetName()</a></li>
<br>
}
</ul>
